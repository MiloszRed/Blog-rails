<div class="card w-75">
  <div class="card-body">
    <h5 class="card-title"> <%= @post.title %> </h5>
    <p class="card-text"> <%= @post.body %> </p>

    <div class="row">
      <%  @post.images.each do |image| %>
        <div class="col-lg-4 col-md-12 mb-4">
          <div class="bg-image hover-overlay ripple shadow-1-strong rounded" data-ripple-color="light">
            <%= image_tag(image, style: 'width:100%; height:auto') %>
          </div>
        </div>
      <% end %>
    </div>

    <%= link_to 'Edit', edit_admin_post_path(@post), class: "btn btn-secondary" %> 
    <%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    <%= link_to 'Back', admin_posts_path, class: "btn btn-dark" %>
    <%= link_to 'Create PDF', admin_post_path(@post, format: :pdf), class: "btn btn-dark", target: :_blank %>
  </div>
</div>

<br />
<%= render 'admin/comments/index' %>
<br />
<%= render 'admin/comments/new' %>

