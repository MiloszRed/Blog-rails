<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <div class="card w-75 mb-3 bg-light">
    <div class="card-body">         
        <h5 class="card-title"> <%= comment.user.email.split('@')[0].capitalize %> </h5>
        <p class="card-text"> <%= comment.body %> </p>

        <% if policy(comment).update? %>
          <%= link_to 'Edit', edit_admin_post_comment_path(@post, comment), class: "text-primary text-decoration-none" %> 
        <% end %>
        <% if policy(comment).destroy? %>
          <%= link_to 'Delete', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure?' }, class: "text-danger text-decoration-none" %>
        <% end %>
    </div>
  </div>
<% end %>
